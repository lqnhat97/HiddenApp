<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ntt.tainguyen197.myapplication.MenuActivity">

    <RelativeLayout
        android:id="@+id/rlmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnContact"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:text="Photos" />

        <Button
            android:id="@+id/btnContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnPhoto"
            android:layout_marginEnd="12dp"
            android:text="Contact" />

        <TextView
            android:id="@+id/tvnamedevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnPhoto"
            android:layout_marginStart="19dp"
            android:layout_marginTop="14dp"
            android:text="Tên thiết bị"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvgps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvnamedevice"
            android:layout_alignTop="@+id/btnContact"
            android:text="GPS"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvbattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnContact"
            android:layout_alignStart="@+id/tvgps"
            android:text="Pin"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvwifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvbattery"
            android:layout_below="@+id/tvbattery"
            android:layout_marginTop="16dp"
            android:text="Wifi"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvVitri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvwifi"
            android:layout_below="@+id/tvwifi"
            android:layout_marginTop="29dp"
            android:text="Vị trí:"
            android:textColor="@android:color/background_dark" />

        <fragment
            android:id="@+id/fragmentmap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVitri"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:menu="@menu/drawermenu"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
